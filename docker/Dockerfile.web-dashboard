# Multi-stage Dockerfile for AgentaFlow Web Dashboard
# Optimized for small image size and security

# Build stage - Full Go toolchain
FROM golang:1.25-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git ca-certificates tzdata

# Create non-root user for runtime
RUN adduser -D -s /bin/sh -u 1000 appuser

# Set working directory
WORKDIR /build

# Copy go mod files and download dependencies (leverage layer caching)
COPY go.mod go.sum ./
RUN go mod download && go mod verify

# Copy source code
COPY . .

# Build the application
# CGO_ENABLED=0: Build static binary
# -ldflags: Strip debug info and reduce binary size
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build \
    -ldflags='-w -s -extldflags "-static"' \
    -a -installsuffix cgo \
    -o agentaflow-dashboard \
    ./examples/demo/web-dashboard/main.go

# Runtime stage - Minimal footprint using distroless
FROM gcr.io/distroless/static-debian12:nonroot

# Copy timezone data and SSL certificates from builder
COPY --from=builder /usr/share/zoneinfo /usr/share/zoneinfo
COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/

# Copy the compiled binary
COPY --from=builder --chown=nonroot:nonroot /build/agentaflow-dashboard /app/agentaflow-dashboard

# Set working directory
WORKDIR /app

# Use non-root user
USER nonroot:nonroot

# Expose ports
# 9000: Web Dashboard
# 9001: Prometheus Metrics
EXPOSE 9000 9001

# Health check (distroless doesn't have shell, so we use the app itself)
# Note: This requires implementing a health endpoint in the application
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD ["/app/agentaflow-dashboard", "--health-check"]

# Set environment defaults
ENV LOG_LEVEL=info \
    GPU_SIMULATION=true \
    WEB_PORT=9000 \
    METRICS_PORT=9001

# Labels for metadata
LABEL org.opencontainers.image.title="AgentaFlow Web Dashboard" \
      org.opencontainers.image.description="Real-time GPU monitoring dashboard with WebSocket updates" \
      org.opencontainers.image.vendor="FinOptimize" \
      org.opencontainers.image.source="https://github.com/Finoptimize/agentaflow-sro-community" \
      org.opencontainers.image.licenses="Apache-2.0"

# Application entrypoint
ENTRYPOINT ["/app/agentaflow-dashboard"]
